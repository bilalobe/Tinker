@page "/products"
@inject ProductService ProductService

<h1>Product List</h1>

<button class="btn btn-primary" @onclick="CreateProduct">Add New Product</button>

<table class="table">
    <thead>
        <tr>
            <th>Reference</th>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in products)
        {
            <tr>
                <td>@product.Reference</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <button class="btn btn-sm btn-secondary" @onclick="() => EditProduct(product.Id)">Edit</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
