@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4 justify-content-between"></div>
        <div class="d-flex align-items-center">
            <BreadcrumbTrail/>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="d-flex align-items-center gap-3">
                        <span class="user-info">
                            <i class="fas fa-user me-2"></i>@context.User.Identity?.Name
                        </span>
                    <a href="/logout" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </div>
            </Authorized>
            <NotAuthorized>
                <a href="/login" class="btn btn-primary btn-sm">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
            </NotAuthorized>
        </AuthorizeView>
</div>

<article class="content px-4 py-3">
    <ErrorBoundary>
        <CascadingValue Value="this">
            @Body
        </CascadingValue>
    </ErrorBoundary>
</article>
</main>
</div>

<div id="blazor-error-ui" class="alert alert-danger" role="alert">
    <div class="d-flex align-items-center">
        <i class="fas fa-exclamation-triangle me-2"></i>
        An unhandled error has occurred.
        <a href="" class="reload ms-auto">Reload</a>
        <a class="dismiss ms-2">🗙</a>
    </div>
</div>
